<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/container">

    <ImageView
        android:id="@+id/list_pic"
        android:layout_width="@dimen/pic_width_list"
        android:layout_height="@dimen/pic_height_list"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/pic_list_margin_bottom"
        android:layout_marginEnd="@dimen/pic_list_margin_end"
        android:layout_marginStart="@dimen/pic_list_margin_start"
        android:layout_marginTop="@dimen/pic_list_margin_top"
        tools:ignore="ContentDescription"
        tools:src="@drawable/carol_small" />

    <LinearLayout
        android:layout_width="@dimen/no_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_title"
            style="@style/TextStyle.listItem.title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="Carol Park" />

        <TextView
            android:id="@+id/type"
            style="@style/TextStyle.listItem.regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="Type:" />

        <ImageView
            android:id="@+id/stars_image_list_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="ContentDescription"
            tools:src="@drawable/star4_vector" />

        <TextView
            android:id="@+id/open"
            style="@style/TextStyle.listItem.regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_list_title_margin_start"
            android:gravity="center"
            android:textSize="@dimen/text_list_regular_size"
            tools:text="Open: " />

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/pic_list_margin_bottom"
        android:layout_marginEnd="@dimen/pic_list_margin_end"
        android:layout_marginStart="@dimen/pic_list_margin_start"
        android:layout_marginTop="@dimen/pic_list_margin_top"
        android:src="@drawable/next_vector"
        tools:ignore="ContentDescription" />

</LinearLayout>
