<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextStyle" parent="@style/TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextStyle.listItem">
        <item name="android:layout_marginStart">@dimen/text_list_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/text_list_margin_end</item>
        <item name="android:layout_marginTop">@dimen/text_list_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/text_list_margin_bottom</item>
    </style>

    <style name="TextStyle.listItem.regular">
        <item name="android:textSize">@dimen/text_list_regular_size</item>
    </style>

    <style name="TextStyle.listItem.title">
        <item name="android:textSize">@dimen/text_list_title_size</item>
    </style>

    <style name="TextStyle.details">
        <item name="android:layout_marginStart">@dimen/details_text_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/details_text_margin_end</item>
        <item name="android:layout_marginTop">@dimen/details_text_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/details_text_margin_bottom</item>
    </style>

    <style name="TextStyle.details.title">
        <item name="android:textSize">@dimen/text_details_title_size</item>
    </style>

    <style name="TextStyle.details.regular">
        <item name="android:textSize">@dimen/text_details_regular_size</item>
        <item name="android:drawablePadding">@dimen/details_text_drawable_padding</item>
    </style>

    <style name="view_details" parent="Base.Theme.AppCompat">
        <item name="android:layout_marginStart">@dimen/details_view_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/details_view_margin_end</item>
        <item name="android:layout_marginTop">@dimen/details_view_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/details_view_margin_bottom</item>
    </style>
    
    <style name="button" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/buttonColor</item>
    </style>

    <style name="CategoryTab" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/CategoryTabTextAppearance</item>
    </style>
    
    <style name="CategoryTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/tab_text_size</item>
    </style>

</resources>
